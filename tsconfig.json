{
  "extends": "@tsconfig/node20/tsconfig.json",
  "strictNullChecks": true,
  "allowJs": true,
  "checkJs": false,
  "include": ["./src/**/*", "./tests/**/*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "nodenext",
    "strict": true,
    "outDir": "./dist",
    "useUnknownInCatchVariables": true
  }
}
